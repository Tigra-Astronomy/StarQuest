@model ForgotViewModel

@{
    ViewBag.Title = "Resend Invitation";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Resend Invitation</h4>
    </div>
    <div class="panel-body">
        <p>Enter the email address of a provisioned user account to resend their invitation</p>
        @using (Html.BeginForm("ResendInvitation", "UserAdministration"))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new {@class = "text-danger col-md-12"})
            @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger col-md-12"})
            @Html.EditorFor(m => Model.Email)
            <input type="submit" value="Send Invitation &raquo;" class="btn btn-warning"/>
            }

    </div>
</div>@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

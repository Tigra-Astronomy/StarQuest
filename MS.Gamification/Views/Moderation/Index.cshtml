@using System.Web.Mvc.Html
@model IEnumerable<MS.Gamification.ViewModels.ModerationQueueItem>

@{
    ViewBag.Title = "Moderation Queue";
}

<h2>Moderation Queue</h2>

@foreach (var observation in Model)
    {
    <div class="row">
        <div class="col-md-3">@Html.DisplayFor(p => observation.DateTime)</div>
        <div class="col-md-2">@Html.DisplayFor(p => observation.UserName)</div>
        <div class="col-md-4">@Html.DisplayFor(p => observation.ChallengeName)</div>
        <div class="col-md-2">@Html.ActionLink("View >", "Details", new {Id = observation.ObservationId}, new {@class = "btn-sm btn-info"})</div>
    </div>
    }

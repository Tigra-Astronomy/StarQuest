@model Mission

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Mission</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Precondition, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Precondition, new { htmlAttributes = new { @class = "form-control", @id="precondition"} })
                @Html.ValidationMessageFor(model => model.Precondition, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/codemirror-3.01/codemirror.js"></script>
    <script src="~/Scripts/codemirror-3.01/mode/xml.js" type="text/javascript"></script>
    <script type="text/javascript" language="javascript">
        var editor = CodeMirror.fromTextArea(document.getElementById("precondition"),
            {
                mode: "xml",
                matchClosing: true,
                smartIndent: true,
                electricChars: true,
                value:
                    "<?xml version=\"1.0\" encoding=\"utf-8\"?>\r\n\r\n<LevelPrecondition xmlns=\"http://tigra-astronomy.com/starquest/LevelPreconditionSchema.xsd\"\r\n                   xmlns:xsi=\"http://www.w3.org/2001/XMLSchema-instance\"\r\n                   xsi:schemaLocation=\"http://tigra-astronomy.com/starquest/LevelPreconditionSchema.xsd LevelPreconditionSchema.xsd\">\r\n\r\n</LevelPrecondition>"
            });
    </script>
}
@section styles
{
    <link href="~/Content/codemirror-3.01/codemirror.css" rel="stylesheet" type="text/css"/>
    <style>
        .CodeMirror {
            border: 1px solid #334;
            /*width: 800px;*/
        }
    </style>
}

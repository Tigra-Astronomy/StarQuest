@using MS.Gamification.BusinessLogic.EventManagement
@model IEnumerable<MS.Gamification.Areas.Admin.ViewModels.ObservingSessions.ObservingSessionIndexViewModel>

@{
    ViewBag.Title = "Observing Session Index";
}
@section styles
{
    @Styles.Render("~/Content/datatables")
}


<h2>Observing Sessions</h2>

<p>
    @Html.ActionLink("Create New >>", "Create", null, new {@class="btn btn-info"})
</p>
<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped table-hover" id="observingSessions">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StartsAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Venue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduleState)
                </th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartsAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduleState)
                    </td>
                    <td>
                        @if (item.ScheduleState == ScheduleState.Scheduled)
                            {
                            @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new {@class = "btn btn-xs btn-success"})
                            }
                        @Html.ActionLink("Details", "Details", new {id = item.Id}, new {@class = "btn btn-xs btn-info"})
                        @if (item.ScheduleState == ScheduleState.Scheduled)
                            {
                            @Html.ActionLink("Cancel", "Cancel", new {id = item.Id}, new {@class = "btn btn-xs btn-danger"})
                            }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/datatables")
}